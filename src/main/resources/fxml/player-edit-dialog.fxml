<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.basketball.controller.PlayerEditDialogController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #fafafa;">

    <Label text="Edit Player" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8" alignment="TOP_LEFT">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- 0 Name -->
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- 1 Age -->
        <Label text="Age:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="ageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- 2 Height -->
        <Label text="Height (cm):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="heightField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- 3 Weight -->
        <Label text="Weight (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="weightField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- 4 Wingspan -->
        <Label text="Wingspan (cm):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="wingspanField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- 5 Handedness -->
        <Label text="Handedness:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="handednessBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- 6 Max Vertical -->
        <Label text="Max Vertical (cm):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="verticalField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <!-- 7 Stamina -->
        <Label text="Stamina (0-100):" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Slider fx:id="staminaSlider" min="0" max="100" showTickLabels="true"
                GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        <Label fx:id="staminaLabel" GridPane.rowIndex="7" GridPane.columnIndex="2"/>

        <!-- 8 Agility -->
        <Label text="Agility (0-100):" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <Slider fx:id="agilitySlider" min="0" max="100" showTickLabels="true"
                GridPane.rowIndex="8" GridPane.columnIndex="1"/>
        <Label fx:id="agilityLabel" GridPane.rowIndex="8" GridPane.columnIndex="2"/>

        <!-- 9 Speed -->
        <Label text="Speed (0-100):" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <Slider fx:id="speedSlider" min="0" max="100" showTickLabels="true"
                GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        <Label fx:id="speedLabel" GridPane.rowIndex="9" GridPane.columnIndex="2"/>

        <!-- 10 Photo -->
        <Label text="Photo:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <ComboBox fx:id="photoComboBox" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
        <ImageView fx:id="photoPreview" fitWidth="80" fitHeight="80" preserveRatio="true"
                   GridPane.rowIndex="10" GridPane.columnIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Delete" onAction="#onDeleteClick"
                style="-fx-background-color: #d32f2f; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#onCancelClick"/>
        <Button text="Save" onAction="#onSaveClick"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>