<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.basketball.controller.DashboardController"
      spacing="10" style="-fx-background-color: #f5f5f5;">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Basketball Management System" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Welcome," style="-fx-font-weight: bold;"/>
        <Label fx:id="userNameLabel" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
        <Button text="Logout" onAction="#onLogoutClick"
                style="-fx-background-color: #d32f2f; -fx-text-fill: white;"/>
    </HBox>

    <Separator/>

    <!-- Tabs -->
    <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <!-- Players Tab -->
            <Tab text="Players">
                <fx:include source="players-tab.fxml"/>
            </Tab>

            <!-- Games Tab -->
            <Tab text="Games">
                <VBox alignment="CENTER" spacing="20">
                    <Label text="Games Management" style="-fx-font-size: 18;"/>
                    <Label text="Coming soon..." style="-fx-text-fill: gray;"/>
                </VBox>
            </Tab>

            <!-- Statistics Tab -->
            <Tab text="Statistics">
                <VBox alignment="CENTER" spacing="20">
                    <Label text="Player and Team Statistics" style="-fx-font-size: 18;"/>
                    <Label text="Coming soon..." style="-fx-text-fill: gray;"/>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

</VBox>